<div class="center user-posts">
  <% provide(:title, @user.user_name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.user_name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>posts(<%= @user.posts.count %>)</h3>
        <%= render 'posts' %>
      <% end %>
      <%= will_paginate @posts %>
    </div>
  </div>
</div>
